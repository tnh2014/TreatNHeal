<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.treat_n_heal.dbtest.Appointment">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/contentbg"
        android:weightSum="1"
        android:orientation="vertical">

        <Button
            android:id="@+id/datetimeButton"
            android:text="Select Date and Time"
            android:onClick="selectDateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_marginTop="300dp"/>

        <Button
            android:id="@+id/saveExitButton"
            android:text="Save and Exit to main"
            android:onClick="saveMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_marginTop="20dp"/>

    </LinearLayout>

</RelativeLayout>
